{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "sourceMap": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false // TODO
  },
  "include": [
    "./node_modules/tns-platform-declarations/android.d.ts",
    "./node_modules/tns-platform-declarations/ios.d.ts",
    "./typings/*",
  ],
  "files": [
    "./payments.common.ts",
    "./payments.android.ts",
    "./payments.ios.ts",
    "./index.ts"
  ],
  "compileOnSave": false
}
