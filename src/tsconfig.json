{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "sourceMap": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false // TODO
  },
  "include": [
    // refs
    "node_modules/tns-platform-declarations/android.d.ts",
    "node_modules/tns-platform-declarations/ios.d.ts",
    "typings/*",
    // srcs
    "index.ts",
    "**/*.android.ts",
    "**/*.ios.ts",
    "**/*.common.ts"
  ],
  "compileOnSave": false
}
