{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false // TODO
  },
  "include": [
    // references
    "node_modules/tns-platform-declarations/android.d.ts",
    "node_modules/tns-platform-declarations/ios.d.ts",
    "typings/InAppBillingService.aidl.d.ts",
    "typings/java!PlayBillingLibrary.d.ts",
    // sources
    "failure/**/*",
    "item/**/*",
    "order/**/*",
    "payments.android.ts",
    "payments.ios.ts",
    "payments.common.ts"
  ],
  "compileOnSave": false
}
